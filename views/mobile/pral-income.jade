extends layoutmobile
block content
    include head
    include addons/validator-adds
    section.main-alt
        .row
            .col-xs-12
                .schedule-opt
                    li: a(href="/mbiom").animsition-link
                        h4.text-center: i.fa.fa-calculator
                    li.li-border-right: a(href="/mbincl").animsition-link
                        h4.text-center: i.fa.fa-usd

            .col-xs-12
                h4.text-muted.text-center
                    i.fa.fa-calculator
                    span.contact-name Calculadora de venta

            .col-xs-12.formulario
                .col-xs-12
                    form(id="form", action="/clatincome", method="POST").form-horizontal
                        fieldset
                            .col-xs-12
                                .form-group
                                    .input-group
                                        span.input-group-addon
                                            i.fa.fa-usd
                                        input(type="tel", name="total", id="total").form-control
                                    p.text-muted.text-center Precio de la venta que se realizo

                            .col-xs-12
                                .form-group
                                    .input-group
                                        span.input-group-addon
                                            i.fa.fa-usd
                                        input(type="tel", name="inicial", id="inicial").form-control
                                    p.text-muted.text-center Valor de la inicial que el cliente anticipa

                            .col-xs-12
                                .input-group
                                    span.input-group-addon
                                        i.fa.fa-calendar-o
                                    select(name="cuotas").form-control
                                        option(value="6") 6 Meses
                                        option(value="11") 11 Meses
                                        option(value="20") 20 Meses
                                p.text-muted.text-center Plazo del financiamento en meses

                            .col-xs-12.spance-botton
                                p.text-center
                                    button(type="submit").btn.btn-lg.label-x.btn-submit
                                        i.fa.fa-calculator
                                        span calcular

                    script(type="text/javascript").
                        $(document).ready(function() {
                            $('#form')
                                    .bootstrapValidator({
                                        excluded: ':disabled',
                                        feedbackIcons: {
                                            valid: 'glyphicon glyphicon-ok',
                                            invalid: 'glyphicon glyphicon-remove',
                                            validating: 'glyphicon glyphicon-refresh'
                                        },
                                        fields: {
                                            total: {
                                                validators: {
                                                    notEmpty: {
                                                        message: 'El precio de la venta es requerido'
                                                    },
                                                    numeric: {
                                                        message: 'El precio debe ser un numero'
                                                    }
                                                }
                                            },
                                            inicial: {
                                                validators: {
                                                    notEmpty: {
                                                        message: 'La inicial de la venta es requerido'
                                                    },
                                                    numeric: {
                                                        message: 'El precio debe ser un numero'
                                                    }
                                                }
                                            }
                                        }
                                    });
                        });


    include footer